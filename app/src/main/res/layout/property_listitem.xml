<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCardView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:elevation="23dp"
    app:cardCornerRadius="2dp">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/sample"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/DelPro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/delripple"
                android:contentDescription="@string/delete_property"
                android:gravity="center"
                android:src="@drawable/ic_delete_forever_black_24dp" />


            <ImageButton
                android:id="@+id/EdiPro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_ripple"
                android:contentDescription="@string/delete_property"
                android:gravity="center"
                android:src="@drawable/ic_edit_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="7dp">

                <ImageView
                    android:id="@+id/imgProperty"
                    android:layout_width="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"
                    android:background="@drawable/square_img"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ha_logo" />

                <!-- For Right Panel -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <!-- For Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/txtPropTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/bold"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:textColor="#4a4a4a"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:id="@+id/txtPropId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/rambla"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:textColor="#4a4a4a"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <!-- For Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/txtLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/rambla"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!--Price and Area and edit Linear layout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <!-- For Price -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/coins" />

                            <TextView
                                android:id="@+id/txtPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/rambla"
                                android:text="@string/price"
                                android:textSize="12sp" />

                        </LinearLayout>
                        <!-- For Price -->

                        <!-- For Area -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/area" />

                            <TextView
                                android:id="@+id/txtArea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/rambla"
                                android:text="@string/area"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <!-- For Area -->
                    </LinearLayout>
                    <!--Price and Area Linear layout-->
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>


</androidx.cardview.widget.CardView>
