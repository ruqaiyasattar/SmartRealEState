<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--ADDITIONAL IMAGES-->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/semibold"
        android:text="@string/additional_images"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="16sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="2dp">

            <!--Multiple images-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="2dp">

                <Button
                    android:id="@+id/tv_multi_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/select_additional_images"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_multiimgs"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Amalities Details-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/semibold"
        android:text="@string/amenity_details"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/hintColor"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted"
        android:fadingEdgeLength="3dp"
        android:focusableInTouchMode="true"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Checkbox List-->

            <!--Main Features-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/DMSans-Bold"
                android:text="@string/main_features"
                android:textAllCaps="true"
                android:textColor="@color/hintColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/view_main"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/prop_et"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:hint="@string/view"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/hintColor"
                    android:textSize="14sp"
                    tools:ignore="NestedWeights" />

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/aop"
                        android:layout_width="170dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/prop_et"
                        android:fontFamily="@fonts/DMSans-Bold"
                        android:hint="@string/age_of_property"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/hintColor"
                        android:textSize="14sp" />


                    <ImageButton
                        android:id="@+id/aop_info"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@drawable/question" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/ebackup"
                    style="@style/SpinnerTheme"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/electricity_backup"
                    android:textColor="@color/spin_color"
                    tools:ignore="NestedWeights" />

                <CheckBox
                    android:id="@+id/park"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-10dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/parking"
                    android:textColor="@color/pri_color_one"
                    android:textSize="13sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ac"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/central_ac"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/furnished"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/furnished"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/storg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/storage"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/own"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/owner_occupied"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>
            <!--Main Features-->

            <!--Nearby-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@fonts/DMSans-Bold"
                android:text="@string/near_by"
                android:textAllCaps="true"
                android:textColor="@color/hintColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/uni"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/university"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/col"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/college"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/schol"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/school"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/garden"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/park"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
