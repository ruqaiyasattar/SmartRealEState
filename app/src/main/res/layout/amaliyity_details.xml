                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/msjid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/masjid"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <!--Nearby-->
            <!--Rooms-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@fonts/DMSans-Bold"
                android:text="@string/rooms"
                android:textAllCaps="true"
                android:textColor="@color/hintColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/servant_quart"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/prop_et"
                        android:fontFamily="@fonts/DMSans-Bold"
                        android:hint="@string/servant_quarters"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/hintColor"
                        android:textSize="14sp"
                        tools:ignore="NestedWeights" />

                    <ImageButton
                        android:id="@+id/servnt_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@drawable/question" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/kitchecn"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/prop_et"
                        android:fontFamily="@fonts/DMSans-Bold"
                        android:hint="@string/kitchen"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/hintColor"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/kitchen_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@drawable/question" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/bed_room"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/prop_et"
                        android:hint="@string/bed_room"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/hintColor"
                        android:textSize="14sp"
                        tools:ignore="NestedWeights" />

                    <ImageButton
                        android:id="@+id/bed_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@drawable/question" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/stor_room"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/prop_et"
                        android:fontFamily="@fonts/DMSans-Bold"
                        android:hint="@string/store_room"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/hintColor"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/store_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@drawable/question" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/bath_room"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/prop_et"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:hint="@string/bath_room"
                    android:inputType="number"
                    android:textColor="@color/hintColor"
                    android:textSize="14sp"
                    android:paddingLeft="10dp" />


                <ImageButton
                    android:id="@+id/bath_info"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:src="@drawable/question"
                    android:layout_alignParentEnd="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/maid"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/maid_room"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/stdy"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/study_room"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/lundry"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/laundry"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/prayer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/prayer_room"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/dinning"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/dining_room"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/draw"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/drawing_room"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/launge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/lounge"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <!--Rooms-->

            <!--Business & Communication-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@fonts/DMSans-Bold"
                android:text="@string/business_and_communication"
                android:textAllCaps="true"
                android:textColor="#363535"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/intercm"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/intercom"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/cable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/cable_tv_or_satellite"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/broad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/broadband_internet"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <!--Business & Communication-->

            <!--Healthcare Recreational-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@fonts/DMSans-Bold"
                android:text="@string/healthcare_recreational"
                android:textAllCaps="true"
                android:textColor="#363535"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/lagard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/lawn_garden"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />

                <CheckBox
                    android:id="@+id/swimm"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
                    android:text="@string/swimming_pool"
                    android:textColor="@color/pri_color_one"
                    android:textSize="14sp"
                    android:theme="@style/CheckBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/jac"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/DMSans-Bold"
